# Staging Environment Variables for RelayForge
# Copy this to .env on your staging server and fill in your values

# Environment
NODE_ENV=production

# Database
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=relayforge_staging

# Security Keys (use pnpm run generate-env-keys to generate these)
ENCRYPTION_KEY=
JWT_SECRET=
COOKIE_SECRET=
ADMIN_KEY=
INTERNAL_API_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Domain Configuration for staging
DOMAIN_NAME=relayforge.dev
FRONTEND_URL=https://relayforge.dev
OAUTH_SERVICE_URL=https://relayforge.dev
MCP_BASE_URL=https://relayforge.dev
GOOGLE_REDIRECT_URI=https://api.relayforge.dev/oauth/google/callback
ALLOWED_ORIGINS=https://relayforge.dev

# Frontend build variables
VITE_API_BASE_URL=https://relayforge.dev
VITE_OAUTH_SERVICE_URL=https://relayforge.dev