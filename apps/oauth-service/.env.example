# Server Configuration
NODE_ENV=development
PORT=3002
LOG_LEVEL=info

# Security
COOKIE_SECRET=your-32-character-cookie-secret-here
JWT_SECRET=your-32-character-jwt-secret-here

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/oauth/google/callback

# Optional providers (uncomment when ready)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GITHUB_REDIRECT_URI=http://localhost:3002/oauth/github/callback

# SLACK_CLIENT_ID=your-slack-client-id
# SLACK_CLIENT_SECRET=your-slack-client-secret
# SLACK_REDIRECT_URI=http://localhost:3002/oauth/slack/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# MCP Base URL
MCP_BASE_URL=http://localhost:3001

# Session Configuration
SESSION_DURATION_DAYS=30

# Database URL (from root .env)
DATABASE_URL=postgresql://user:password@localhost:5432/relayforge