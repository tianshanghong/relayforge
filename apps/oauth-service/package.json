{
  "name": "@relayforge/oauth-service",
  "version": "0.0.1",
  "description": "OAuth authentication service for RelayForge",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./services": "./dist/services/index.js",
    "./dist/services": "./dist/services/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:security": "node tests/security/run-security-tests.mjs",
    "test:performance": "vitest run --config vitest.config.load.ts",
    "test:performance:watch": "vitest --watch --config vitest.config.load.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.19.0",
    "@relayforge/database": "workspace:*",
    "@relayforge/shared": "workspace:*",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "google-auth-library": "^9.6.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.13",
    "node-fetch": "^3.3.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vitest-environment-vprisma": "^1.3.0"
  }
}