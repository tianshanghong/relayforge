# Production Environment Variables for RelayForge
# Copy this to .env and fill in your values

# Environment
NODE_ENV=production

# Database
POSTGRES_PASSWORD=your-secure-postgres-password

# Security Keys (use pnpm run generate-env-keys to generate these)
ENCRYPTION_KEY=
JWT_SECRET=
COOKIE_SECRET=
ADMIN_KEY=
INTERNAL_API_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Domain Configuration (defaults to relayforge.xyz)
# For custom domains, replace with your actual domain
DOMAIN_NAME=relayforge.xyz
FRONTEND_URL=https://relayforge.xyz
OAUTH_SERVICE_URL=https://api.relayforge.xyz
MCP_BASE_URL=https://api.relayforge.xyz
GOOGLE_REDIRECT_URI=https://api.relayforge.xyz/oauth/google/callback
ALLOWED_ORIGINS=https://relayforge.xyz

# Frontend build variables
VITE_API_BASE_URL=https://api.relayforge.xyz
VITE_OAUTH_SERVICE_URL=https://api.relayforge.xyz